{% extends 'layout.twig' %}
{% block body %}

    <div class="container col-md-4 mt-4 mb-3"><h3>Register form</h3></div>
    {% if error %}
        <div class="container col-md-4 alert alert-danger">{{ error }}</div>
    {% endif %}
    <div class="container col-md-4">
        <form method="post" action="/register">
            <div class="form-group">
                <input type="text" name="username" class="form-control" id="username" placeholder="Choose your login">
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" id="password" placeholder="Choose Password">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

{% endblock %}
